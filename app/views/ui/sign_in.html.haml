%section.sign_in.container
  .row
    .col-md-4.col-md-offset-3
      %form.sign_in
        %header
          %h1 Sign in
        %div{:class => "form-group"}
          %label Username
          %input{:type => "text", :class => "form-control"}
        %div{:class => "form-group"}
          %label Password
          %input{:type => "password", :class => "form-control"}
        %button{:type => "submit", :class => "btn btn-default"}
          Submit
